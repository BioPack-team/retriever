{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./built",
    "paths": {
      "@retriever/smartapi-kg": [
        "../smartapi-kg"
      ],
      "@retriever/biomedical_id_resolver": [
        "../biomedical_id_resolver"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/__test__/**"
  ],
  "references": [
    {
      "path": "../smartapi-kg"
    },
    {
      "path": "../biomedical_id_resolver"
    }
  ]
}
