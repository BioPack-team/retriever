{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./built",
    "paths": {
      "@retriever/smartapi-kg": ["../smartapi-kg"],
      "@retriever/api-response-transform": ["../api-response-transform"],
      "biomedical_id_resolver": ["../biomedical_id_resolver"],
      "@retriever/utils": ["../utils"],
      "@retriever/types": ["../types"],
      "@retriever/graph": ["../graph"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "__test__/"],
  "references": [
    {
      "path": "../api-response-transform"
    },
    {
      "path": "../biomedical_id_resolver"
    },
    {
      "path": "../smartapi-kg"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../types"
    },
    {
      "path": "../graph"
    }
  ]
}
