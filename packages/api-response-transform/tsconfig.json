{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./built",
    "rootDir": "./src",
    "paths": {
      "@retriever/utils": [
        "../utils"
      ],
      "@retriever/types": [
        "../types"
      ],
      "@retriever/graph": [
        "../graph"
      ],
      "@retriever/smartapi_kg": [
        "../smartapi-kg"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__/"
  ],
  "references": [
    {
      "path": "../utils"
    },
    {
      "path": "../types"
    },
    {
      "path": "../graph"
    },
    {
      "path": "../smartapi-kg"
    }

  ]
}
